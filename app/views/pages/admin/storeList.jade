extends layout

block content2
    .panel.panel-default
        .panel-heading
            span.panel-title #{title}
        .panel-body
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 店铺名
                        th 店主
                        th 联系电话
                        th 创建时间
                        th 操作
                tbody
                    each item in stores
                        tr
                            td #{item.name}
                            td #{item.owner}
                            td #{item.phone}
                            td #{moment(item.createAt).format('YYYY年M月D日')}
                            td
                                a.btn.btn-default(href="/admin/store/#{item.id}") 查看
                                span &nbsp;&nbsp;
                                a.btn.btn-default(href="/admin/store/edit/#{item.id}") 编辑
                                span &nbsp;&nbsp;
                                a.btn.btn-default(href="/admin/store/#{item.id}/user") 账号
            ul.pager
                li(class="#{page.current>0?'':'disabled'}")
                    a(href="/admin/store/list?page=#{page.current-1}",onclick="return #{page.current>0}") 上一页
                li &nbsp;第#{page.current+1}页，共#{page.total}页&nbsp;
                li(class="#{page.current<page.total-1?'':'disabled'}")
                    a(href="/admin/store/list?page=#{page.current+1}",onclick="return #{page.current<page.total-1}") 下一页